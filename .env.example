# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Server
PORT=8080
ENV=development

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# WhatsApp (WAHA)
WHATSAPP_STORE_URL=http://localhost:3000
# WAMEO_API_KEY is used for both WAMEO and WAHA authentication
WAMEO_API_KEY=your_wameo_or_waha_api_key
WAMEO_API_URL=http://localhost:3000

# Agent Core
AGENT_CORE_PORT=3000

# OCR Configuration
OCR_PROVIDER=google_vision
GOOGLE_VISION_API_KEY=your_google_vision_api_key
OCRSPACE_API_KEY=your_ocrspace_api_key
TESSERACT_LANGUAGE=eng

# Payment Gateway Configuration
# Mode: "manual" (admin confirms) or "automated" (Midtrans/Xendit)
PAYMENT_MODE=manual

# Midtrans Configuration (only needed if PAYMENT_MODE=automated)
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_IS_PRODUCTION=false

# Email Configuration
# Provider: "brevo" or "resend"
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your_brevo_api_key
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=WhatsApp Bot SaaS

# Super Admin Notification (SaaS Owner - Optional)
# Leave empty to disable super admin notifications
# Super admin will receive copies of all tenant notifications for monitoring
ADMIN_PHONE=6281234567890
ADMIN_EMAIL=admin@yourdomain.com

# Note: Tenant admin info (business owner) is stored in clients table:
# - WhatsApp: clients.whatsapp_number
# - Email: TODO - add admin_email field to clients table
# - Name: clients.business_name

# Authentication Configuration
# JWT secret key for signing tokens (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth Configuration (Optional)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Upload Configuration
# Provider: "local", "cloudinary", or "s3"
UPLOAD_PROVIDER=local

# Local Storage Configuration (when UPLOAD_PROVIDER=local)
UPLOAD_BASE_PATH=./uploads
UPLOAD_BASE_URL=http://localhost:8080

# Cloudinary Configuration (when UPLOAD_PROVIDER=cloudinary)
# Get credentials from: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 Configuration (when UPLOAD_PROVIDER=s3)
# Get credentials from AWS IAM
S3_ACCESS_KEY_ID=your-aws-access-key-id
S3_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# Vector Database Configuration
# Provider: "qdrant_cloud" or "qdrant_self_hosted"
VECTOR_PROVIDER=qdrant_self_hosted

# Qdrant Cloud Configuration (when VECTOR_PROVIDER=qdrant_cloud)
# Get credentials from: https://cloud.qdrant.io/
QDRANT_CLOUD_URL=https://xxx-xxx.us-east.aws.cloud.qdrant.io
QDRANT_CLOUD_API_KEY=your-qdrant-cloud-api-key

# Qdrant Self-Hosted Configuration (when VECTOR_PROVIDER=qdrant_self_hosted)
# Run with Docker: docker run -p 6333:6333 -p 6334:6334 qdrant/qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6334

# Embedding Configuration
# Provider: "openai" (gemini coming soon)
EMBEDDING_PROVIDER=openai
# OpenAI models: "text-embedding-3-small" (1536 dims, cheap) or "text-embedding-3-large" (3072 dims, better)
EMBEDDING_MODEL=text-embedding-3-small

# Background Jobs/Queue Configuration
# Enable/disable background job processing
JOBS_ENABLED=true

# Default queue settings
JOBS_DEFAULT_QUEUE=default
JOBS_DEFAULT_CONCURRENCY=5
JOBS_POLL_INTERVAL=1s
JOBS_TIMEOUT=5m

# Job retention (auto-cleanup completed/failed jobs)
JOBS_RETENTION_DAYS=30

# Audit Log Configuration
# Enable/disable audit logging
AUDIT_ENABLED=true

# Audit log retention (auto-cleanup old logs)
AUDIT_RETENTION_DAYS=90

# Export Configuration
# Default page size for PDF exports
EXPORT_PDF_PAGE_SIZE=A4
# Default orientation: "portrait" or "landscape"
EXPORT_PDF_ORIENTATION=portrait
# Default font size
EXPORT_PDF_FONT_SIZE=10
